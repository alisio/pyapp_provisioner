---
# .ansible-lint configuration

profile: production

# Exclude paths
exclude_paths:
  - .cache/
  - .github/
  - .molecule/
  - molecule/

# Enable specific rules
enable_list:
  - args
  - empty-string-compare
  - no-log-password
  - no-same-owner
  - name[prefix]
  - yaml

# Skip specific rules if needed
skip_list:
  - experimental
  - fqcn-builtins  # We use FQCN throughout

# Enforce best practices
use_default_rules: true
parseable: true

# Variables
var_naming_pattern: "^[a-z_][a-z0-9_]*$"

# Task names
task_name_prefix: "{stem} | "
